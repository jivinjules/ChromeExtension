{
  "manifest_version": 2,
  "name": "Bitcoin Cat Jump",
  "description": "Every time a bitcoin block is mined, a cat will get its jumps.",
  "version": "1.0",
  "author": "HashedEntropy",
  "browser_action": {
    "default_icon": "BitcoinCatJumpLogo1.png",    
    "default_title": "Bitcoin Cat Jump"
  },
 "background": {
    "scripts": [
      "js/Background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://tippin.me/buttons/tip.js https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js; object-src 'self'",
  "permissions": [
    "activeTab"
  ]
}